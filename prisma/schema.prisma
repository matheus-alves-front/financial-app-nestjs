// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Expense {
  id          Int @id @default(autoincrement())
  name        String
  isFixed     Boolean
  isEntry     Boolean
  value       Float
  month       MonthResume @relation(fields: [id], references: [id])
}

model MonthResume {
  id                Int @id @default(autoincrement())
  month             String
  expenses          Expense[]
  totalExpenses     Float
  totalAmount       Float
}